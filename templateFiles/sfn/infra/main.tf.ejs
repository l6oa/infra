terraform {
  <% if (!local) { %>
  backend "s3" {
    bucket = "<%= tfstatesBucketName %>"
    key    = "<%= project %>/<%= environment %>/sfn.<%= name %>.tfstate"
    region = "<%= tfstatesBucketRegion %>"
  }
  <% } %>

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.0"
    }
  }
}

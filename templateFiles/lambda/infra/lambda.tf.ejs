resource "aws_lambda_function" "main" {
  function_name = "${var.name}-${var.environment}"
  role          = aws_iam_role.lambda.arn
  package_type  = "Image"
  image_uri     = "<%= local ? localImageName : '${docker_image.main.name}' %>"
  description   = local.build_tag
  memory_size   = var.memory
  timeout       = 900
  publish       = true

  ephemeral_storage {
    size = var.storage
  }

  <% if (Object.entries(env).length > 0 || local) { %>
  environment {
    variables = {
      <% if (local) { %>
        FUNCTION_PATH = "<%= localFunctionPath %>"
      <% } %>
      <% Object.entries(env).forEach(([key, value]) => { %>
        <%= key %> = "<%- value.replaceAll('"', '\\"') %>"
      <% }) %>
    }
  }
  <% } %>

  <% if (!local) { %>
  depends_on = [
    docker_registry_image.main
  ]
  <% } %>
}

resource "aws_iam_role" "lambda" {
  name = "lambda.${var.name}-${var.environment}"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = "sts:AssumeRole"
        Principal = {
          Service = "lambda.amazonaws.com"
        }
      },
    ]
  })
}

resource "aws_iam_role_policy" "lambda_policy" {
  role = aws_iam_role.lambda.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect   = "Allow"
        Action   = "*"
        Resource = "*"
      }
    ]
  })
}

resource "aws_lambda_function_event_invoke_config" "main" {
  function_name          = aws_lambda_function.main.function_name
  maximum_retry_attempts = 0

  dynamic "destination_config" {
    for_each = local.sqs_destination_names
    content {
      on_failure {
        destination = "${local.sqs_base_arn}${destination_config.value}-${var.environment}"
      }

      on_success {
        destination = "${local.sqs_base_arn}${destination_config.value}-${var.environment}"
      }
    }
  }
}

<% if (!local) { %>

resource "aws_ecr_repository" "main" {
  name         = "lambda.${var.name}-${var.environment}"
  force_delete = true
}

resource "aws_ecr_repository_policy" "main" {
  repository = aws_ecr_repository.main.name

  policy = jsonencode({
    Version = "2008-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          Service = "lambda.amazonaws.com"
        }
        Action = [
          "ecr:BatchGetImage",
          "ecr:GetDownloadUrlForLayer"
        ]
      }
    ]
  })
}

resource "docker_registry_image" "main" {
  name          = docker_image.main.name
  keep_remotely = true
}

resource "docker_image" "main" {
  name = "${aws_ecr_repository.main.repository_url}:${local.build_tag}"

  build {
    context    = ".."
    dockerfile = "dockerfile.cloud"
  }
}

resource "random_id" "docker_image" {
  byte_length = 3

  keepers = {
    aws_lambda_ric : filesha1("../lib/aws-lambda-ric.tar.gz")
    dockerfile : filesha1("../dockerfile.cloud")
    dockerignore : filesha1("../.dockerignore")
    package_json : filesha1("../package.json")
    yarn_lock : filesha1("../yarn.lock")
    dist : sha1(join("", [for filename in fileset("../dist", "**") : filesha1("../dist/${filename}")]))

    <% include
      .filter((filename) => filename.endsWith('/'))
      .forEach((filename, index) => { %>
    <%= `include_folder_${index + 1}` %> : sha1(join("", [for filename in fileset("../<%= filename %>", "**") : filesha1("../<%= filename %>/${filename}")]))
    <% }) %>

    <% include
      .filter((filename) => !filename.endsWith('/'))
      .forEach((filename, index) => { %>
    <%= `include_file_${index + 1}` %> : filesha1("../<%= filename %>")
    <% }) %>
  }
}

<% } %>
